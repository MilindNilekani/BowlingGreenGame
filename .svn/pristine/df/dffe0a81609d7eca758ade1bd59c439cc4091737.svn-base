				break;
			case Item.GOAL:
				_obj.GetComponent<Renderer> ().enabled = false;
				_obj.GetComponent<SphereCollider> ().enabled = false;
				_itemAttached = Instantiate (PrefabHandler.Instance.Goal, new Vector3(_obj.transform.position.x,-0.5f,_obj.transform.position.z), Quaternion.identity) as GameObject;
				break;
			}
		}
	}
}
